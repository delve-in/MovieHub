<link href="/dist/home.css" rel="stylesheet">
<body class="bg-gray-100 p-8">

    <div class="text-center mb-4">
        <h1 class="text-3xl font-bold">Top Movies of the Week</h1>
    </div>

    <div class="text-center flex flex-wrap mx-4 movie-section" id="popularMoviesSection">
         <ul>
        {{#each topMovies}}
            <li>
                <img src="{{this.topImgUrl}}" class="movieImage" alt="{{this.topMovieName}} Image">
                <p class="movieName">{{this.topMovieName}}</p>
            </li>
        {{/each}}
    </ul>
    </div>

    <div class="text-center mb-4">
        <h1 class="text-3xl font-bold">Fan Favorite Movies</h1>
    </div>

    <div class="flex flex-wrap -mx-4 movie-section" id="topMoviesSection">
        <ul>
        {{#each fanMovies}}
            <li>
                <img src="{{this.fanImgUrl}}" class="movieImage" alt="{{this.fanMovieName}} Image">
                <p>{{this.fanMovieName}}</p>
            </li>
        {{/each}}
    </ul>
    </div>
</body>

