<div class="bg-gray-100 p-8 flex flex-col items-center">
  <h2 class="text-3xl font-bold mb-4">Personal Dashboard</h2>

  <h3 id="top-Welcome" class="{{refinedUser.id}}">{{#if loggedInOrNot}}
        Welcome {{refinedUser.username}}
        {{/if}}
    </h3>
  <br> <br> <br> <br> <br>

    <div id="wish-list-container" class=" columns-2 w-full xsm:columns-1 sm:columns-2 md:w-1/3 lg:w-1/2">
      <div id="Wishes">
        <h2 class="text-xl font-semibold mb-2">Wishlist Movies</h2>
        <ul id="wish-list" class="list-disc pl-4">
        </ul>
      </div>
        <div id="wishPoster" class="mt-4 ">
          <img id="posterPic" src="/images/MovieHubLogo1.jpg" width="250" height="375" class="rounded-md shadow-md">
        </div>
    </div>
  </div>
</div>

  <div class="commentWish-container mt-8 flex flex-wrap justify-center items-start">
    <div id="comments-container" class="w-full md:w-2/3 lg:w-1/2 pr-8 mb-8 md:mb-0">
      <h2 class="text-xl font-semibold mb-2">Comments</h2>
      {{#each refinedComments as |comments|}}
      <a href="/api/comment/{{id}}" class="block mb-4">
        <div class="bg-white rounded-md p-4 shadow-md">
          <h3 class="text-lg font-semibold mb-2">For {{comments.movie.title}} Created on {{format_date createdAt}}</h3>
        </div>
      </a>
      {{/each}}
    </div>

<script src="js/dashboard.js"></script>